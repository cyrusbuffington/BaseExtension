{
    "manifest_version": 3,
    "name": "Base",
    "version": "1.0",
    "description": "A collaborative canvas for Chrome users",
    "action": {
      "default_popup": "app/popup.html",
      "default_icon": "app/assets/icon120.png"
    },
    "permissions": [
      "storage"
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'; connect-src *;"
    }
}